<UserControl x:Class="DL.PhotoCollage.Presentation.UserControls.ImageDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             Initialized="ImageDisplayUserControl_OnInitialized">
    <Border x:Name="MainBorder"
            BorderThickness="0"
            BorderBrush="#FFeeeeee">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              Opacity="1"
                              Color="Black"
                              BlurRadius="15" />
        </Border.Effect>
        <Border x:Name="InnerBorder" Background="White" BorderThickness="10">
        <GroupBox x:Name="ImageDate" Background="White" BorderThickness="0" >
            <GroupBox.HeaderTemplate >
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontSize ="16" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="black">
                    </TextBlock>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
                <Image x:Name="MainImage"
                       Stretch="None">
                </Image>
            </GroupBox>
        </Border>
        
    </Border>
</UserControl>
