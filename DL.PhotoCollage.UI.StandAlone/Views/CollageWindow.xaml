<Window x:Class="DL.PhotoCollage.UI.StandAlone.Views.CollageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Photo Screensaver"
        Topmost="False"
        AllowsTransparency="True"
        Background="Black"
        Cursor="None"
        WindowStartupLocation="Manual"
        WindowStyle="None">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Close"
                        Executed="ApplicationClose" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="Escape" Command="ApplicationCommands.Close" />
        <KeyBinding Key="Enter" Command="ApplicationCommands.Close" />
    </Window.InputBindings>
    <Canvas x:Name="MainCanvas">
    </Canvas>
</Window>
