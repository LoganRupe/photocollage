<UserControl x:Class="DL.PhotoCollage.Presentation.UserControls.ImageDisplayUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             Initialized="ImageDisplayUserControl_OnInitialized">
    <Border x:Name="MainBorder"
            BorderThickness="10"
            BorderBrush="#FFeeeeee">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0"
                              Opacity="1"
                              Color="Black"
                              BlurRadius="15" />
        </Border.Effect>
        <Border x:Name="InnerBorder"
                BorderThickness="1"
                BorderBrush="#ffcccccc">
            <Image x:Name="MainImage"
                   Stretch="None" />
        </Border>
    </Border>
</UserControl>
